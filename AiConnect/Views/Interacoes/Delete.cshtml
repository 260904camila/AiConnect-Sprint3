@model AiConnect.Models.Interacoes

@{
    ViewData["Title"] = "Excluir Interacao";
}

<h1 style="color:#882414">Excluir Interacao</h1>

<h3>Tem certeza de que deseja excluir esta interação?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Data de Interacao:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInteracao)
        </dd>

        <dt class="col-sm-2">
            Tipo de Interacao:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>

        <dt class="col-sm-2">
            Descrição:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class="col-sm-2">
            Cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>

        <dt class="col-sm-2">
            Lead:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lead.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
